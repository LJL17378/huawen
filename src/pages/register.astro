<html lang="zh-cn">
  <head>
    <meta charset="utf-8" />
    <title>注册</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        background: #f7fafc;
        font-family: 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .register-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0,0,0,0.08);
        padding: 2.5rem 2rem 2rem 2rem;
        min-width: 320px;
        max-width: 90vw;
      }
      h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #22223b;
        font-weight: 700;
        letter-spacing: 2px;
      }
      label {
        display: block;
        margin-bottom: 1.2rem;
        color: #4a4e69;
        font-size: 1rem;
      }
      input[type="text"], input[type="password"] {
        width: 100%;
        padding: 0.6rem 0.8rem;
        border: 1px solid #c9c9c9;
        border-radius: 6px;
        font-size: 1rem;
        margin-top: 0.3rem;
        box-sizing: border-box;
        background: #f8f8fa;
      }
      input[type="checkbox"] {
        margin-left: 0.5em;
        transform: scale(1.2);
      }
      .checkbox-label {
        display: flex;
        align-items: center;
        font-size: 1rem;
        color: #4a4e69;
        margin-bottom: 1.2rem;
      }
      button {
        width: 100%;
        padding: 0.7rem;
        background: #43aa8b;
        color: #fff;
        border: none;
        border-radius: 6px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 0.5rem;
        transition: background 0.2s;
      }
      button:hover {
        background: #2d6a4f;
      }
      #registerMsg {
        margin-top: 1rem;
        color: #e63946;
        text-align: center;
        min-height: 1.5em;
      }
      .login-link {
        display: block;
        text-align: center;
        margin-top: 1.5rem;
        color: #4f8cff;
        text-decoration: none;
        font-size: 1rem;
      }
      .login-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="register-container">
      <h1>注册</h1>
      <form id="registerForm">
        <label>手机号：<input type="text" name="phone" required autocomplete="username" /></label>
        <label>密码：<input type="password" name="password" required autocomplete="new-password" /></label>
        <label class="checkbox-label"><input type="checkbox" name="isAdmin" /> 注册为管理员</label>
        <button type="submit">注册</button>
      </form>
      <div id="registerMsg"></div>
      <a class="login-link" href="/">返回首页</a>
      <a class="login-link" href="/import-users" style="color:#43aa8b;">批量导入用户（Excel）</a>
    </div>
    <script type="module">
      const form = document.getElementById('registerForm');
      const msg = document.getElementById('registerMsg');
      form.onsubmit = async (e) => {
        e.preventDefault();
        const phone = form.phone.value;
        const password = form.password.value;
        const isAdmin = form.isAdmin.checked;
        const res = await fetch('https://oumioumi.cn/api/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ phone, password, isAdmin })
        });
        const data = await res.json();
        if (res.ok && data.status === 'success') {
          msg.style.color = '#43aa8b';
          msg.innerText = '注册成功，正在跳转登录...';
        } else {
          msg.style.color = '#e63946';
          msg.innerText = data.message || '注册失败';
        }
      };
    </script>
  </body>
</html>
